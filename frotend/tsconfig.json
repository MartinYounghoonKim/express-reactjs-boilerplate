{
  "compileOnSave": true,
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "target": "es6",
    "allowJs": false,
    "jsx": "preserve",
    "strictNullChecks": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "typeRoots": [
      "./node_modules/@types/",
      "./@types"
    ],
    "lib": [
      "dom",
      "es2015",
      "es2015.promise",
      "es2015.iterable"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
